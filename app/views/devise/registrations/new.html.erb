<div class="col-md-4 col-md-offset-4">
<div class="panel panel-default">
  <div class="panel-heading text-center">
    <h2>Sign up</h2>
  </div>
<div class="panel-body">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>
    <input <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Email" %> </input>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <input <%= f.password_field :password, autocomplete: "off", type:"password", class:"form-control", placeholder:"Password" %> </input>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <input <%= f.password_field :password_confirmation, autocomplete: "off", type:"password", class:"form-control", placeholder:"Confirm Password" %> </input>
  </div>

  <div class="actions">
    <center><%= f.submit "Sign up", class:"btn btn-primary btn-lg"%></center>
  </div>
<% end %>
    <center><%= link_to "Log In", new_user_session_path%></center>
</div>
</div>

