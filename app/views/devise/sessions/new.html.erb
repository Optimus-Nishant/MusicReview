<div class="col-md-4 col-md-offset-4">
<div class="panel panel-default">
  <div class="panel-heading text-center">
    <h2>Sign In</h2>
  </div>
<div class="panel-body">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, type:"email",class:"form-control", placeholder:"Email"%>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", type:"password", class:"form-control", placeholder:"Passsword" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <center><%= f.submit "Sign In", class:"btn btn-primary btn-lg"%></center>
   
  </div>
<% end %>
    <center><%= render "devise/shared/links" %></center>
</div>
</div>

